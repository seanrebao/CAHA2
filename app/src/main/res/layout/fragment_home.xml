        android:layout_centerHorizontal="true"
        android:text=""
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="@+id/toggleButton7"
        app:layout_constraintStart_toStartOf="@+id/toggleButton7"
        app:layout_constraintTop_toBottomOf="@+id/toggleButton7" />

    <TextView
        android:id="@+id/selectedTimeTextView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/toggleButton1"
        android:textColor="@color/white"
        android:layout_centerHorizontal="true"
        android:text=""
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="@+id/toggleButton8"
        app:layout_constraintStart_toStartOf="@+id/toggleButton8"
        app:layout_constraintTop_toBottomOf="@+id/toggleButton8" />

    <Spinner
        android:id="@+id/spinnerOptions"
        android:layout_width="126dp"
        android:layout_height="64dp"
        android:layout_marginEnd="52dp"
        android:background="@drawable/spinner_border"
        app:layout_constraintBottom_toBottomOf="@+id/switchOFF"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/switchON"
        app:layout_constraintVertical_bias="0.51"
        android:entries="@array/options_array"
        android:spinnerMode="dropdown"
        android:backgroundTintMode="src_over"
        android:dropDownWidth="match_parent"
        android:dropDownVerticalOffset="0dp"
        android:dropDownHorizontalOffset="0dp"
        android:gravity="center_horizontal"
        android:popupTheme="@style/ThemeOverlay.AppCompat.Light" />

    <TextView
        android:id="@+id/displayTextView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:textColor="@color/white"
        android:text="Switch 1"
        app:layout_constraintBottom_toTopOf="@+id/toggleButton1"
        app:layout_constraintEnd_toEndOf="@+id/toggleButton1"
        app:layout_constraintStart_toStartOf="@+id/toggleButton1" />

    <!-- Additional TextView elements -->

    <TextView
        android:id="@+id/displayTextView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:textColor="@color/white"
        android:text="Switch 2"
        app:layout_constraintBottom_toTopOf="@+id/toggleButton2"
        app:layout_constraintEnd_toEndOf="@+id/toggleButton2"
        app:layout_constraintStart_toStartOf="@+id/toggleButton2" />

    <!-- Add five more TextView elements similarly -->

    <TextView
        android:id="@+id/displayTextView3"
        android:layout_width="wrap_content"
