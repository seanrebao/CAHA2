        android:layout_below="@id/toggleButton1"
        android:layout_centerHorizontal="true"
        android:text=""
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="@+id/toggleButton6"
        app:layout_constraintStart_toStartOf="@+id/toggleButton6"
