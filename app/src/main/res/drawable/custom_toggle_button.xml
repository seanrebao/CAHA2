<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Unchecked state -->
    <item android:drawable="@drawable/rounded_button_normal" android:state_checked="false" />
    <!-- Checked state -->
    <item android:drawable="@drawable/rounded_button_checked" android:state_checked="true" />
</selector>
